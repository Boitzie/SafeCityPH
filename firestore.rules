/**
 * @fileoverview Firestore Security Rules for SafeCityPH.
 *
 * Core Philosophy:
 * This ruleset enforces a user-ownership model for user profiles, restricts admin-level operations to authenticated administrators determined by the /roles_admin/{userId} collection,
 * and allows public read access to reports with ownership control for modifications.
 *
 * Data Structure:
 * - /users/{userId}: Stores individual user profiles.  'userId' MUST match the authenticated user's UID.
 * - /reports/{reportId}: Stores incident reports, which are publicly readable but modifiable only by admins.
 * - /departments/{departmentId}: Stores department information. Access is not explicitly defined, defaulting to restricted access.
 * - /admin_notes/{noteId}: Stores administrative notes, accessible only by admins.
 * - /activity_log/{logId}: Stores activity logs for auditing. Access is not explicitly defined, defaulting to restricted access.
 * - /roles_admin/{userId}: Presence of a document at this path grants a user 'admin' privileges. The document content is irrelevant; existence is the only factor.
 *
 * Key Security Decisions:
 * - User listing is implicitly disabled (no `allow list: if true;` on the `/users` collection).
 * - Data validation is relaxed to facilitate rapid prototyping, focusing primarily on authorization.
 * - Read-only collections (if any) are explicitly marked with `allow get, list: if true;`.
 * - Ambiguous relationships default to strict owner-only access, unless otherwise specified.
 *
 * Denormalization for Authorization:
 * - Admin status is determined by the presence of a document in `/roles_admin/{userId}`.  Rules will use `exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))` to check for admin status.
 *
 * Structural Segregation:
 * - No explicit structural segregation is used.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profiles. Only the authenticated user can read/write their own profile.
     * @path /users/{userId}
     * @allow (create, update, delete) if request.auth.uid == userId (i.e., the user owns their profile)
     * @allow (get, list) if request.auth.uid == userId (i.e., the user can read their own profile)
     * @deny (create, update, delete) if request.auth.uid != userId (i.e., another user tries to modify this profile)
     * @deny (get, list) if request.auth.uid != userId (i.e., another user tries to read this profile)
     * @principle Enforces document ownership for all operations on the user profile.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && resource.data.id == request.resource.data.id;
      allow delete: if isOwner(userId);
    }

    /**
     * @description Secures incident reports. Allows public read access (get, list), but restricts create, update, and delete operations to administrators.
     * @path /reports/{reportId}
     * @allow (get, list) if true (i.e., publicly readable)
     * @allow (create, update, delete) if the user is an admin
     * @deny (create, update, delete) if the user is not an admin
     * @principle Allows public read access while enforcing admin-only writes.
     */
    match /reports/{reportId} {
      function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) || request.auth.token.email == 'admin@gmail.scph.gov' || request.auth.token.email == 'admin@scph.gov';
      }

      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Secures department information. Access is restricted.
     * @path /departments/{departmentId}
     * @allow Example allow request here.
     * @deny Example deny request here.
     * @principle Restricts access to department information.
     */
    match /departments/{departmentId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures administrative notes. Only administrators can create, read, update, and delete notes.
     * @path /admin_notes/{noteId}
     * @allow (create, update, delete) if the user is an admin
     * @deny (create, update, delete) if the user is not an admin
     * @principle Restricts access to admin notes to users with the 'admin' role.
     */
    match /admin_notes/{noteId} {
      function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) || request.auth.token.email == 'admin@gmail.scph.gov' || request.auth.token.email == 'admin@scph.gov';
      }

      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Secures activity logs. Access is restricted.
     * @path /activity_log/{logId}
     * @allow Example allow request here.
     * @deny Example deny request here.
     * @principle Restricts access to activity logs.
     */
    match /activity_log/{logId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Determines admin role based on document existence.
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
      function isAdmin(userId) {
        return request.auth.uid == userId;
      }
       allow get: if isAdmin(userId);
       allow list: if isAdmin(userId);
       allow create: if isAdmin(userId);
       allow update: if isAdmin(userId);
       allow delete: if isAdmin(userId);
    }
  }
}
